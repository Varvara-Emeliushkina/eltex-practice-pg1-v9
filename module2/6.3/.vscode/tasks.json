{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-windows",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "-o",
                "calculator.exe",
                "main.c",
                "calculator.c",
                "ui.c",
                "-Wall",
                "-Wextra",
                "-lm"
            ],
            "group": "build",
            "problemMatcher": ["$gcc"],
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": ["/C"]
                }
            }
        }
    ]
}